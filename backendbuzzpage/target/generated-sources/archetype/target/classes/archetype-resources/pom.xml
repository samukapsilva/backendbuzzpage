	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<p12.key.file>keyFileName=${project.basedir}/src/main/resources/buzzpage-analytics-df7513e94f2f.p12</p12.key.file>
				<application.context.file>${project.build.outputDirectory}/spring/applicationContext.xml</application.context.file>
				<jndi.replace.expression>name="jndiName(.*)"</jndi.replace.expression>
				<jndi.name>name="jndiName" value="java:/restBuzzPageDB"</jndi.name>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<echo>Substituindo diretorio da p12KeyFile ${p12.key.file}</echo>
										<replaceregexp file="src/main/resources/analytics.properties" match="keyFileName=(.*)" replace="${p12.key.file}" byline="true" />
										<replaceregexp file="${application.context.file}" match="${jndi.replace.expression}" replace="${jndi.name}" byline="true" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>prd</id>
			<properties>
				<analytics.properties.file>${project.build.outputDirectory}/analytics.properties</analytics.properties.file>
				<application.context.file>${project.build.outputDirectory}/spring/applicationContext.xml</application.context.file>
				<jndi.replace.expression>name="jndiName(.*)"</jndi.replace.expression>
				<jndi.name>name="jndiName" value="java:/jdbc/restBuzzPageDB"</jndi.name>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
