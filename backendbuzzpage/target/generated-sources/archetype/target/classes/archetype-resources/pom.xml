								</goals>
								<configuration>
									<target>
										<echo>Substituindo diretorio da p12KeyFile</echo>
										<replaceregexp file="${analytics.properties.file}" match="keyFileName=(.*)" replace="keyFileName=/home/buzzpag/buzzpage-analytics/buzzpage-analytics-df7513e94f2f.p12" byline="true" />
										<replaceregexp file="${application.context.file}" match="${jndi.replace.expression}" replace="${jndi.name}" byline="true" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

